<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_primary_color"
    android:orientation="vertical"
    android:theme="@style/Theme.ListaDeCompras"
    tools:context=".ui.activity.CartList">

    <ListView
        android:id="@+id/activity_cart_list_of_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        tools:listitem="@layout/cart_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_cart_list_fab_new_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="Adicionar novo item"
        android:padding="16dp"
        android:src="@drawable/ic_action_add_new_item"
        app:backgroundTint="@color/text_icons"
        app:fabSize="normal" />

</RelativeLayout>